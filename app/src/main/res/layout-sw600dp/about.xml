<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ext="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/aboutBackground"
    android:paddingTop="?attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/moviedb_about" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/aboutApp"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="@string/TMDbText"
            android:textColor="@color/aboutText"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/tmdb"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/tmdb"
            android:tag="http://themoviedb.org" />

        <com.bluejamesbond.text.DocumentView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            ext:documentView_antialias="true"
            ext:documentView_cacheConfig="auto_quality"
            ext:documentView_insetPaddingLeft="25dp"
            ext:documentView_insetPaddingRight="25dp"
            ext:documentView_reverse="false"
            ext:documentView_text="@string/TMDbLegalNotice"
            ext:documentView_textAlignment="justified"
            ext:documentView_textColor="@color/aboutText"
            ext:documentView_textFormat="plain"
            ext:documentView_textSize="14sp"
            ext:documentView_textSubPixel="true" />

        <ImageView
            android:id="@+id/sourcestream"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/sourcestream"
            android:tag="http://sourcestream.de/" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aboutSupport"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/aboutSupportMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aboutSupportMail"
                android:textColor="@color/aboutMail"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutSourcestream"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/aboutWebSite"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>